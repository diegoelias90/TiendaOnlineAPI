@model TiendaOnlineAPI.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductoId" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="UrlImagen"></label>
        <input asp-for="UrlImagen" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <input asp-for="CategoriaId" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>